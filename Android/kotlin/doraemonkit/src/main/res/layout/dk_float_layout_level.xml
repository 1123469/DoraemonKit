<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginStart="@dimen/dk_dp_15"
    android:layout_marginEnd="@dimen/dk_dp_15"
    android:background="@drawable/dk_info_background"
    android:paddingStart="@dimen/dk_dp_16"
    android:paddingEnd="@dimen/dk_dp_16">

    <TextView
        android:id="@+id/tv_layout_level_title"
        style="@style/DK.Text.Darker"
        android:text="@string/dk_layout_level"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/cb_layout_level_switch"
        style="@style/DK.CheckBox"
        android:layout_marginLeft="@dimen/dk_dp_20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tv_layout_level_title"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_layout_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:src="@mipmap/dk_close_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
